<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >
    </EditText>

            <Button
               android:id="@+id/myButton"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignRight="@+id/EditText01"
               android:layout_below="@+id/EditText01"
               android:onClick="onClick"
               android:text="SEND TEXT" >
            </Button>
    

             <ToggleButton
                android:id="@+id/onoffbutton1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignLeft="@+id/myButton"
                android:layout_below="@+id/myButton"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="28dp" 
                android:textOn="1"
                android:textOff="1"
                android:background="@drawable/btn_style" />
             <ToggleButton
                android:id="@+id/onoffbutton2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignRight="@+id/myButton"
                android:layout_below="@+id/myButton"
                android:layout_marginRight="54dp"
                android:layout_marginTop="28dp" 
                android:textOn="2"
                android:textOff="2"
                android:background="@drawable/btn_style" />
			  <ToggleButton
                android:id="@+id/onoffbutton4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignRight="@+id/myButton"
                android:layout_below="@+id/myButton"
                android:layout_marginRight="54dp"
                android:layout_marginTop="156dp" 
                android:textOn="4"
                android:textOff="4"
                android:background="@drawable/btn_style" />
			   <ToggleButton
                android:id="@+id/onoffbutton3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignLeft="@+id/myButton"
                android:layout_below="@+id/myButton"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="156dp"
                android:textOn="3"
                android:textOff="3"  
                android:background="@drawable/btn_style"/>
			<SeekBar
       		    android:id="@+id/seekBar1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_alignLeft="@+id/myButton"
                android:layout_below="@+id/myButton"
                android:layout_marginTop="350dp" 
                android:max="122"/>
			 <EditText
                android:id="@+id/Textget"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/myButton"
                android:layout_below="@+id/myButton"
                android:layout_marginRight="0dp"
                android:layout_marginTop="300dp" >
             </EditText>

</RelativeLayout>