<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.armtronix.wififourrelay"
    android:versionCode="1"
    android:versionName="1.0"
    android:launchMode= "standard" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.RECORD_AUDIO" >
    </uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@drawable/sym01"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.armtronix.wififourrelay.Enter_IP"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="net.armtronix.wififourrelay.Client"
                  android:label="@string/app_name"></activity>
        
        <activity android:name="net.armtronix.wififourrelay.About"
            android:configChanges="orientation|keyboardHidden"/>
    </application>

</manifest>